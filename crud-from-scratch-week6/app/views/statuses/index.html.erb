<div class="page-header">

<h1>Status Updates</h1>
</div>
<table class="table table-striped table-hover">
  <a class="btn btn-info" <%= link_to 'New Status', new_status_path %></a>


<thead>
   <tr>
     <th>Message</th>
     <th>User</th>
     <th>Likes</th>

   </tr>
 </thead>

 <tbody>
   <% @status.each do |status| %>
     <tr>
       <td><%= link_to "#{status.message}", status %></td>
      <td><%= status.user %></td>
      <td><%= status.likes %></td>
      </tr>
   <% end %>

  
 </tbody>
 </table>
